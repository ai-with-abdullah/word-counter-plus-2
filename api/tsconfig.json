{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": ".vercel/output",
    "rootDir": "..",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true
  },
  "include": [
    "./**/*.ts",
    "../server/**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../node_modules"
  ]
}
